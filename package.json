{
  "name": "vl-ui-button",
  "version": "0.0.1",
  "description": "Een button laat de gebruiker toe om een bepaalde actie uit te voeren. Welke soort actie dat is, staat aangegeven op de button in de vorm van een tekst of een icoon.",
  "main": "vl-button.js",
  "author": "DIDM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-button.git"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-button#readme",
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "scripts": {
    "prepare": "npm run prepare:util && npm run prepare:build",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "prepare:build": "uglifyjs --compress --mangle --output vl-button.js -- *.src.js",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:update && npm run release:prepare:css && npm run release:prepare:core && npm run release:prepare:commit",
    "release:prepare:update": "git fetch && git pull",
    "release:prepare:css": "replace '../style.css' https://cdn.milieuinfo.be/vl-ui-button/$release_version/style.css vl-button.js",
    "release:prepare:core": "replace './node_modules/vl-ui-core/vl-core.src.js' https://cdn.milieuinfo.be/vl-ui-button/$release_version/node_modules/vl-ui-core/vl-core.js vl-button.js",
    "release:prepare:commit": "git add vl-button.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "dependencies": {
    "@govflanders/vl-ui-button": "3.7.2",
    "@govflanders/vl-ui-core": "3.7.2",
    "@govflanders/vl-ui-icon": "3.7.2",
    "@govflanders/vl-ui-util": "3.7.2",
    "vl-ui-core": "0.0.1"
  },
  "devDependencies": {
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2",
    "replace": "1.0.0",
    "np": "3.0.4",
    "uglify-js-es6": "2.8.9",
    "http-server": "0.11.1",
    "vl-ui-util": "0.0.2"
  }
}
